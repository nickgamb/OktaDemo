<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- widget stuff here -->
    <script src="https://ok1static.oktacdn.com/assets/js/sdk/okta-signin-widget/2.9.0/js/okta-sign-in.min.js" type="text/javascript"></script>
    <link href="https://ok1static.oktacdn.com/assets/js/sdk/okta-signin-widget/2.9.0/css/okta-sign-in.min.css" type="text/css" rel="stylesheet" />
    <link href="https://ok1static.oktacdn.com/assets/js/sdk/okta-signin-widget/2.9.0/css/okta-theme.css" type="text/css" rel="stylesheet" />

    <!-- use the Okta widget to power authentication! -->
    <script type="text/javascript">
        var oktaSignIn = new OktaSignIn({
            baseUrl: "https://dev-993565.okta.com",
            clientId: "0oaeabuygXVPUFj05356",
            authParams: {
                issuer: "https://dev-993565.okta.com/oauth2/default",
                responseType: ["token", "id_token"],
                display: "page"
            }
        });

        if (oktaSignIn.token.hasTokensInUrl()) {
            oktaSignIn.token.parseTokensFromUrl(
                // If we get here, the user just logged in.
                function success(res) {
                    var accessToken = res[0];
                    var idToken = res[1]

                    oktaSignIn.tokenManager.add("accessToken", accessToken);
                    oktaSignIn.tokenManager.add("idToken", idToken);

                    window.location.hash = "";
                    document.getElementById("messageBox").innerHTML = "Hello, " + idToken.claims.email + "! You are logged in! :)";
                },
                function error(err) {
                    console.error(err);
                }
            );
        } else {
            oktaSignIn.session.get(function (res) {
                // If we get here, the user is already signed in.
                if (res.status === 'ACTIVE') {
                    document.getElementById("messageBox").innerHTML = "Welcome back, " + res.login;
                    return;
                }

                // If we get here, the user is not logged in, so we should show the sign-in form.
                oktaSignIn.renderEl(
                    { el: '#sign-in-container' },
                    function success(res) { },
                    function error(err) {
                        console.error(err);
                    }
                );
            });
        }
    </script>
</head>
<body>
    <div class="container">
        <div id="messageBox" class="jumbotron">
            Please Login
        </div>
        <!-- where the sign-in form will be displayed -->
        <div id="sign-in-container"></div>
    </div>
</body>
</html>

